  <%= link_to "Add new restaurant", new_restaurant_path %>

  <ul>
  <% @restaurants.each do |restaurant| %>
    <li>
      <%= restaurant.name %>
      <%= link_to "See detail", restaurant_path(restaurant) %>
      <%= link_to "Update restaurant", edit_restaurant_path(restaurant) %>
      <%= link_to "Delete restaurant", restaurant_path(restaurant),
        method: :delete,
        data: { confirm: "Are you sure?" } %>
    </li>
  <% end %>
  </ul>

